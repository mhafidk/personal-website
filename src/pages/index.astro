---
import { getCollection, getEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogCard from "../components/BlogCard.astro";

const allBlogPosts = await getCollection("blog");
const pageTitle = "Muhammad Hafid Khoirul";
const skills = [
  "astro.svg",
  "elastic.svg",
  "go.svg",
  "javascript.svg",
  "opencv.svg",
  "postgresql.svg",
  "python.svg",
  "redis.png",
  "ruby.svg",
  "ruby_on_rails.svg",
];
---

<BaseLayout pageTitle={pageTitle}>
  <div class="flex flex-col md:flex-row items-center gap-10">
    <img
      src="/mhk-profile.png"
      alt="Muhammad Hafid Khoirul"
      class="w-44 h-44 rounded-full bg-lime-600"
    />
    <div class="">
      <h1 class="text-3xl text-center md:text-left">
        Hi, I am <span class="font-bold text-lime-600">Hafid</span>!
      </h1>
      <p class="text-3xl font-bold my-2 text-center md:text-left">
        Software Developer
      </p>
      <p class="text-xl text-center md:text-left">
        Currently, I am working as a backend engineer at <a
          href="https://www.qontak.com"
          target="_blank"
          rel="noreferrer"
          class="border-b border-lime-600 text-lime-600 hover:text-lime-700"
          >Qontak</a
        >.
      </p>
    </div>
  </div>
  <div class="mt-12">
    <h2 class="text-2xl font-semibold">Latest Posts</h2>
    <div class="mt-4">
      {allBlogPosts.map((post) => <BlogCard post={post} />)}
    </div>
    <div class="mt-12 text-center">
      <a
        href="/blog"
        class="bg-lime-600 hover:bg-lime-700 text-neutral-50 px-4 py-2 rounded-md"
        >More post</a
      >
    </div>
  </div>
  <div class="mt-12">
    <h2 class="text-2xl font-semibold">Experiences & Tools</h2>
    <div class="mt-6 pl-4">
      <ol class="border-s border-neutral-300 dark:border-neutral-500">
        <!--First item-->
        <li>
          <div class="flex-start flex items-center pt-3">
            <div
              class="-ms-[5px] me-3 h-[9px] w-[9px] rounded-full bg-neutral-900"
            >
            </div>
            <p class="">2020 - Present</p>
          </div>
          <div class="mb-6 ms-4 mt-2">
            <h4 class="mb-1.5 text-xl font-semibold text-lime-600">
              Backend Engineer, <a
                href="https://www.qontak.com"
                target="_blank"
                rel="noreferrer"
                class="border-b border-lime-600 hover:text-lime-700">Qontak</a
              >
            </h4>
            <p class="mb-3">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque
              scelerisque diam non nisi semper, et elementum lorem ornare.
              Maecenas placerat facilisis mollis. Duis sagittis ligula in
              sodales vehicula.
            </p>
          </div>
        </li>
        <!--Second item-->
        <li>
          <div class="flex-start flex items-center pt-2">
            <div
              class="-ms-[5px] me-3 h-[9px] w-[9px] rounded-full bg-neutral-900"
            >
            </div>
            <p class="">2016 - 2020</p>
          </div>
          <div class="mb-6 ms-4 mt-2">
            <h4 class="mb-1.5 text-xl font-semibold text-lime-600">
              Undergraduate, <a
                href="https://www.ub.ac.id"
                target="_blank"
                rel="noreferrer"
                class="border-b border-lime-600 hover:text-lime-700"
                >Brawijaya University</a
              >
            </h4>
            <p class="mb-3">
              Libero expedita explicabo eius fugiat quia aspernatur autem
              laudantium error architecto recusandae natus sapiente sit nam
              eaque, consectetur porro molestiae ipsam an deleniti.
            </p>
          </div>
        </li>
      </ol>
    </div>
    <div class="mt-20 justify-center flex flex-wrap gap-6">
      {skills.map((skill) => <img src={skill} alt="" class="h-8 md:h-10" />)}
    </div>
  </div>
  <div class="mt-12" id="contact">
    <h2 class="text-2xl font-semibold">Contact</h2>
    <div class="mt-2">
      <p>
        Have something to say? Ask a question or just say hi, anything! Feel
        free to contact me, my inbox is always open! You can contact me through
        one of these platforms!
      </p>
      <div class="font-mono mt-6">
        <a
          href="mailto:mhafidk@gmail.com"
          target="_blank"
          rel="noreferrer"
          class="font-mono text-lime-600 hover:text-lime-700 border-b border-lime-600"
          >EMAIL</a
        >
        <a
          href="https://www.github.com/mhafidk"
          target="_blank"
          rel="noreferrer"
          class="font-mono text-lime-600 hover:text-lime-700 border-b border-lime-600"
          >GITHUB</a
        >
        <a
          href="https://www.linkedin.com/in/mhafidk"
          target="_blank"
          rel="noreferrer"
          class="font-mono text-lime-600 hover:text-lime-700 border-b border-lime-600"
          >LINKEDIN</a
        >
      </div>
    </div>
  </div>
</BaseLayout>
