---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Muhammad Hafid Khoirul";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="flex items-center gap-10">
    <img
      src="/mhk-profile.png"
      alt="Muhammad Hafid Khoirul"
      class="w-44 h-44 rounded-full bg-lime-600"
    />
    <div class="">
      <h1 class="text-3xl">
        Hi, I am <span class="font-bold text-lime-600">Hafid</span>!
      </h1>
      <p class="text-3xl font-bold my-2">Software Developer</p>
      <p class="text-xl">
        Currently, I am working as a backend engineer at <a
          href="https://www.qontak.com"
          target="_blank"
          rel="noreferrer"
          class="border-b border-lime-600 hover:text-lime-700">Qontak</a
        >.
      </p>
    </div>
  </div>
  <div class="mt-12">
    <h2 class="text-2xl font-semibold">Latest Posts</h2>
    <div class="mt-2"></div>
  </div>
  <div class="mt-12">
    <h2 class="text-2xl font-semibold">Experiences & Tools</h2>
    <div class="mt-2"></div>
  </div>
  <div class="mt-12" id="contact">
    <h2 class="text-2xl font-semibold">Contact</h2>
    <div class="mt-2">
      <p>
        Have something to say? Ask a question or just say hi, anything! Feel
        free to contact me, my inbox is always open! You can contact me through
        one of these platforms!
      </p>
      <div class="font-mono mt-6">
        <a
          href="mailto:mhafidk@gmail.com"
          target="_blank"
          rel="noreferrer"
          class="font-mono text-lime-600 hover:text-lime-700 border-b border-lime-600"
          >EMAIL</a
        >
        <a
          href="https://www.github.com/mhafidk"
          target="_blank"
          rel="noreferrer"
          class="font-mono text-lime-600 hover:text-lime-700 border-b border-lime-600"
          >GITHUB</a
        >
        <a
          href="https://www.linkedin.com/in/mhafidk"
          target="_blank"
          rel="noreferrer"
          class="font-mono text-lime-600 hover:text-lime-700 border-b border-lime-600"
          >LINKEDIN</a
        >
      </div>
    </div>
  </div>
</BaseLayout>
