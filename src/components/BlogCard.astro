---
const { post } = Astro.props;
---

<div class="flex flex-col sm:flex-row gap-4 h-max sm:h-44 items-center">
  <div class="w-full sm:w-1/3 h-1/2 sm:h-full">
    <img
      src={post.data.image.url}
      alt={post.data.image.alt}
      class="w-full h-full object-cover rounded-md"
    />
  </div>
  <div class="w-full sm:w-2/3">
    <a
      href={`/blog/${post.slug}`}
      class="text-xl font-semibold text-lime-600 hover:text-lime-700"
      >{post.data.title}</a
    >
    <p class="mt-2 line-clamp-6 sm:line-clamp-4">
      {post.data.description}
    </p>
    <div class="flex flex-wrap text-sm gap-x-4 gap-y-2 text-violet-600 mt-2">
      {post.data.tags.map((tag) => <p>{tag}</p>)}
    </div>
  </div>
</div>
